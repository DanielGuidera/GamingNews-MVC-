@using DemoMVC.Models;
@{
    ViewBag.Title = "Article";
}

@{
    ArticleModels articleInfo = (ArticleModels)ViewData["ArticleInfo"];
}
<p></p>
<div class="Top">
    <div class="well well-sm" style="width: 1000px">
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img class="pull-left" src="@articleInfo.thumbnail" width="100" height="100">
                </a>
            </div>
            <div class="media-body">
                <h1 class="media-heading">@articleInfo.title</h1>
                @articleInfo.blurb
                <p></p>
                <a target="_blank" href="@articleInfo.link" class="btn btn-primary">Source</a> <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Report</button>
            </div>
        </div>        
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Report @articleInfo.title</h4>
            </div>
            <div class="modal-body">
                <div class="btn-group" role="group" aria-label="...">
                    @Html.ActionLink("Spam", "Read", "Article", new { @class = "btn btn-default" })
                    @Html.ActionLink("Fake", "Read", "Article", new { @class = "btn btn-default" })
                    @Html.ActionLink("Old", "Read", "Article", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>


